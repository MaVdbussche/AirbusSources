<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/signupScreen4_TitleColumn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_screen_4_titleColumn1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/signupScreen4_TitleColumn3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/signup_screen_4_titleColumn3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signupScreen4ButtonNext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/signup_buttonConfirm"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.981"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="375dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/signupScreen4ButtonNext"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/signupScreen4_TitleColumn3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>